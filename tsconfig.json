{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "strict": true /* Obliga a tipar todo correctamente */,
        "noEmit": true /* IMPORTANTE: VS Code solo revisa, no crea .js */,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true /* Acelera la carga ignorando chequeos profundos de libs */,
        "forceConsistentCasingInFileNames": true,

        /* Rutas para que VS Code no se queje de los imports */
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist", "build"]
}
